@model IEnumerable<Exam.Web.ViewModels.TicketHomeViewModel>
@{
    ViewBag.Title = "Search";
}

<h2>Search</h2>

<div class="row-fluid">
    @for (int i = 0; i < Model.Count(); i++)
    {
        var ticket = Model.ElementAt(i);
        <div class="span4">
            <h2>@ticket.Title</h2>
            <p><strong>Category: </strong> @ticket.CategoryName</p>
            <p><strong>Author: </strong> @ticket.AuthorName</p>
            <p>@ticket.CommentsCount comment(s)</p>
            <p><a class="btn" href="@Url.Action("Details", "Tickets", new { ticket.Id })">More details...</a></p>
        </div>

        if (i > 0 && (i + 1) % 3 == 0)
        {
            @:</div>
            @:<div class="row-fluid">
        }
    }
</div>