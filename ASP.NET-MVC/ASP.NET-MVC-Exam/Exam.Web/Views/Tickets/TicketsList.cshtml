@{
    ViewBag.Title = "TicketsList";
}

<h2>Tickets List</h2>

<div class="row-fluid">
    @using (Html.BeginForm("Search", "Tickets", FormMethod.Post))
    {
        <div>
            Search by category
        </div>
        @(Html.Kendo()
        .DropDownList()
        .Name("catsearch")
        .DataTextField("CategoryName")
            .DataValueField("CategoryName")
            .OptionLabel("Select Category")
        .DataSource(data =>
        {
            data.Read(read => read.Action("GetTicketCategoryData", "Tickets"));
            data.ServerFiltering(true);
        }))

        <div>
            <input type="submit" value="Search" class="btn" />
        </div>

    }
</div>
<br />

<div class="row-fluid">
    <div class="span3">
        <h3>Title</h3>
    </div>
    <div class="span3">
        <h3>Category</h3>
    </div>
    <div class="span2">
        <h3>Author</h3>
    </div>
    <div class="span2">
        <h3>Priority</h3>
    </div>
    <div class="span2">
        <h3>Details</h3>
    </div>
</div>

@(Html.Kendo()
    .ListView<Exam.Web.ViewModels.TicketHomeViewModel>()
    .Name("tickets")
    .TagName("div")
    .ClientTemplateId("ticket-template")
    .Pageable()
    .DataSource(data =>
    {
        data.Read("GetTickets", "Tickets");
        data.ServerOperation(true);
        data.PageSize(5);
    }))

<script id="ticket-template" type="text/x-kendo-template">
    <div class="row-fluid ticketTemplate">
        <div class="span3">
            <p>#: Title #</p>
        </div>
        <div class="span3">
            <p>#: CategoryName #</p>
        </div>
        <div class="span2">
            <p>#: AuthorName #</p>
        </div>
        <div class="span2">
            <p>#: PriorityString #</p>
        </div>
        <div class="span2">
            <p><a href="/Tickets/Details/#: Id #" class="btn">Details...</a></p>
        </div>
    </div>
</script>

